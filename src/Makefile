### Initial structure Generated by 'configure --with-whatever' from Makefile.in 
### Rest of the structure edited by Erik Zilliacus to suit compilation outside STK directory
### STK examples Makefile - for various flavors of unix

STK_PATH = ../../stk
#PROGRAMS = sine sineosc foursine
RM = /bin/rm
SRC_PATH = $(STK_PATH)/src
OBJECT_PATH = build
vpath %.o $(OBJECT_PATH)

INCLUDE = $(STK_PATH)/include


CC       = g++
DEFS     =   -DHAVE_GETTIMEOFDAY -D__LINUX_ALSA__
DEFS    += -D__LITTLE_ENDIAN__
CFLAGS   = -O3 -Wall
CFLAGS  += -I$(INCLUDE) -I$(INCLUDE)/../src/include
LIBRARY = -lpthread -lasound -lm 

REALTIME = yes
ifeq ($(REALTIME),yes)
  PROGRAMS = ada_synth
endif

RAWWAVES = 
ifeq ($(strip $(RAWWAVES)), )
	RAWWAVES = $(STK_PATH)/rawwaves/
endif
DEFS    += -DRAWWAVE_PATH=\"$(RAWWAVES)\"

%.o : $(SRC_PATH)/%.cpp $(OBJECT_PATH)/.placeholder
	$(CC) $(CFLAGS) $(DEFS) -c $(<) -o $(OBJECT_PATH)/$@

%.o : $(STK_PATH)/src/include/%.cpp $(OBJECT_PATH)/.placeholder
	$(CC) $(CFLAGS) $(DEFS) -c $(<) -o $(OBJECT_PATH)/$@

%.o : %.cpp $(OBJECT_PATH)/.placeholder
	$(CC) $(CFLAGS) $(DEFS) -c $(<) -o $(OBJECT_PATH)/$@

all : $(PROGRAMS)

$(OBJECT_PATH)/.placeholder:
	mkdir -vp $(OBJECT_PATH)
	touch $(OBJECT_PATH)/.placeholder

$(OBJECTS) : Stk.h 

clean : 
	$(RM) -f $(OBJECT_PATH)/*.o
	$(RM) -f $(PROGRAMS) *.exe
	$(RM) -fR *~ *.dSYM

distclean: clean
	$(RM) Makefile

strip : 
	strip $(PROGRAMS)

ada_synth: ada_synth.cpp Stk.o FileRead.o FileWvIn.o RtAudio.o
	$(CC) $(LDFLAGS) $(CFLAGS) $(DEFS) -o ada_synth ada_synth.cpp $(OBJECT_PATH)/Stk.o $(OBJECT_PATH)/FileRead.o $(OBJECT_PATH)/FileWvIn.o $(OBJECT_PATH)/RtAudio.o $(LIBRARY)

